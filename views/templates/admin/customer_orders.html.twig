{% extends '@Modules/demovieworderhooks/views/templates/admin/card.html.twig' %}

{% block card_title %}
  {{ 'Other orders from this customer'|trans }}
{% endblock %}

{% block card_body %}
  <div class="table-responsive">
    <table class="table">
      <thead>
        <tr>
          <th>{{ 'Reference'|trans }}</th>
          <th>{{ 'Status'|trans }}</th>
          <th>{{ 'Total paid'|trans }}</th>
          <th>{{ 'Placed at'|trans }}</th>
        </tr>
      </thead>
      <tbody>
      {% for order in orders %}
        <tr>
          <td>
            <a href="{{ order.link }}">
              {{ order.reference }}
            </a>
          </td>
          <td>
            <span class="badge rounded"
                  style="background-color: {{ order.status.color }}; color: {{ is_color_bright(order.status.color) ? 'black' : 'white' }};"
            >
              {{ order.status.name }}
            </span>
          </td>
          <td>
            {{ order.totalPaid }}
          </td>
          <td>
            {{ order.placedAt|date_format_full }}
          </td>
        </tr>
      {% endfor %}
      </tbody>
    </table>
  </div>
{% endblock %}
